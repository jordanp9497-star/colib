{
  "expo": {
    "name": "colib",
    "slug": "colib",
    "owner": "jojo946",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "colib",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "usesAppleSignIn": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Colib utilise votre position pour demarrer et suivre votre trajet.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Colib peut suivre votre trajet en arriere-plan pour detecter des opportunites colis.",
        "LSApplicationQueriesSchemes": [
          "waze",
          "google.navigation",
          "waze",
          "google.navigation"
        ],
        "ITSAppUsesNonExemptEncryption": false
      },
      "bundleIdentifier": "com.jojo946.colib"
    },
    "android": {
      "package": "com.jojo946.colib",
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0F141A",
          "dark": {
            "backgroundColor": "#0F141A"
          }
        }
      ],
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Colib utilise votre position pour demarrer et suivre votre trajet.",
          "locationAlwaysAndWhenInUsePermission": "Colib suit votre trajet en arriere-plan pour proposer des colis compatibles.",
          "isAndroidBackgroundLocationEnabled": true,
          "isAndroidForegroundServiceEnabled": true
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#2F80ED"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Colib utilise la camera pour scanner le QR de remise et debloquer le paiement transporteur."
        }
      ],
      "expo-apple-authentication"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "bad06a89-d8c2-45f4-8637-f6895de95333"
      }
    }
  }
}
